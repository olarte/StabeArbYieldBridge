# StableArbYieldBridge Environment Configuration Example
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys (Required for production)
ONEINCH_API_KEY=your_1inch_api_key_here

# RPC Endpoints (Optional - defaults provided in code)
ETHEREUM_RPC=https://eth.llamarpc.com
CELO_RPC=https://forno.celo.org
SUI_RPC=https://fullnode.mainnet.sui.io:443

# Alternative RPC Providers (Optional)
# ETHEREUM_RPC=https://eth-mainnet.alchemyapi.io/v2/your_alchemy_key
# ALCHEMY_API_KEY=your_alchemy_api_key

# Database Configuration (if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/stablearb

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Settings
DEBUG=true
LOG_LEVEL=info

# Bridge Configuration
MIN_ARBITRAGE_PROFIT=0.5
MAX_SLIPPAGE_TOLERANCE=2.0
DEFAULT_GAS_PRICE=20

# Monitoring
HEALTH_CHECK_INTERVAL=30000